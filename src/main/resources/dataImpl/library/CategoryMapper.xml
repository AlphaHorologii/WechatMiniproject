<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.library.data.library.CategoryMapper">
    <select id="getAllCategory" resultMap="category">
        SELECT * FROM category
    </select>

    <select id="getIDByName" resultType="Integer">
        SELECT categoryID FROM category WHERE name=#{categoryName}
    </select>

    <select id="getNameByID" resultType="String">
        SELECT name FROM category WHERE categoryID=#{categoryID}
    </select>

    <resultMap id="category" type="com.example.library.po.Category">
        <id column="categoryID" property="categoryID"/>
        <result column="name" property="categoryName"/>
        <result column="image" property="image"/>
        <result column="introduction" property="introduction"/>
        <result column="heat" property="heat"/>
    </resultMap>
</mapper>