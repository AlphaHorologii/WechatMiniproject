<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.library.data.user.AccountMapper">
    <select id="getAccountByID" resultMap="user">
        SELECT * FROM user WHERE userID=#{userID}
    </select>

    <select id="getAccountByEmail" resultMap="user">
        SELECT * FROM user WHERE email=#{email}
    </select>

    <insert id="register" parameterType="com.example.library.po.User" useGeneratedKeys="true" keyProperty="userID">
        INSERT INTO user (email, password) VALUES (#{email}, #{password})
    </insert>

    <update id="updateInfo" parameterType="com.example.library.po.User">
        UPDATE user SET password=#{password}, username=#{username}, stuNumber=#{stuNumber}
        WHERE email = #{email}
    </update>

    <resultMap id="user" type="com.example.library.po.User">
        <id column="userID" property="userID"/>
        <result column="email" property="email"/>
        <result column="password" property="password"/>
        <result column="username" property="username"/>
        <result column="stuNumber" property="stuNumber"/>
        <result column="userType" property="userType"/>
    </resultMap>
</mapper>